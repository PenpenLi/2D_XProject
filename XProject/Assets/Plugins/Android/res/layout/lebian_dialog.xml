<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lebian_dialog_layout"
    android:layout_width="400dip"
    android:layout_height="wrap_content"
    android:minWidth="300dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lebian_header"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lebian_title"
            style="@style/lebian_DialogText.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dip"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/lebian_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lebian_center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/lebian_message"
                style="@style/lebian_DialogText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lebian_check_box_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lebian_down_center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/lebian_check_box"
            style="@style/lebian_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="8dip"
            android:drawableLeft="@drawable/lebian_check_box_bg"
            android:drawablePadding="5dp"
            android:paddingLeft="0dp"
            android:text="@string/lebian_next_no_prompt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lebian_footer"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lebian_negativeButton"
            style="@style/lebian_DialogText.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/lebian_dialog_button_negative"
            android:gravity="center"
            android:minHeight="36dip"
            android:minWidth="100dip"
            android:singleLine="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lebian_positiveButton"
            style="@style/lebian_DialogText.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/lebian_dialog_button_positive"
            android:gravity="center"
            android:minHeight="36dip"
            android:minWidth="100dip"
            android:singleLine="true"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

